{
    "compilerOptions": {
        "target": "ES2021",
        "module": "CommonJS",
        "rootDirs": [
            "./src",
        ],
        "outDir": "./dist",
        "baseUrl": ".",
        "allowJs": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "removeComments": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "skipLibCheck": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "compileOnSave": true,
    "include": [
        "src",
    ],
    "engines": {
        "node": "20"
    },
    "exclude": [
        "**/node_modules/**"
    ]
}
