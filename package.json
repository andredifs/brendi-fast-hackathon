{
    "name": "brendi-fast-hackathon",
    "version": "1.0.0",
    "private": true,
    "description": "Monorepo Firebase: Dashboard (Nuxt) + Functions",
    "scripts": {
        "dev:dashboard": "npm run dev --prefix dashboard",
        "dev:functions": "npm run serve --prefix functions",
        "build": "npm run build:functions && npm run build",
        "build:dashboard": "npm run build --prefix dashboard",
        "build:functions": "npm run build --workspace=functions",
        "deploy": "npm run deploy:dashboard",
        "deploy:dashboard": "gcloud builds submit --config dashboard/deploy/cloudbuild.yaml .",
        "deploy:dashboard:staging": "gcloud builds submit --config dashboard/deploy/cloudbuild.yaml --substitutions=_ENVIRONMENT=staging,_ENVIRONMENT_SUFFIX=-staging,_MEMORY=512Mi,_MIN_INSTANCES=0 .",
        "firebase:deploy": "npm run build:all && firebase deploy",
        "firebase:deploy:hosting": "npm run build --prefix dashboard && firebase deploy --only hosting",
        "firebase:deploy:functions": "firebase deploy --only functions",
        "lint": "npm run lint --prefix dashboard && npm run lint --prefix functions",
        "lint:dashboard": "npm run lint --prefix dashboard",
        "lint:functions": "npm run lint --prefix functions",
        "clean": "rm -rf dashboard/.output dashboard/.nuxt functions/lib node_modules dashboard/node_modules functions/node_modules"
    },
    "workspaces": [
        "dashboard",
        "functions"
    ],
    "engines": {
        "node": "20"
    },
    "keywords": [
        "firebase",
        "nuxt",
        "monorepo"
    ]
}
