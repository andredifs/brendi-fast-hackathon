{
    "emulators": {
        "singleProjectMode": false,
        "functions": {
            "port": 5001,
            "host": "0.0.0.0"
        },
        "firestore": {
            "port": 9093,
            "host": "0.0.0.0"
        },
        "pubsub": {
            "port": 9095,
            "host": "0.0.0.0"
        }
    },
    "functions": [
        {
            "source": "functions",
            "codebase": "default",
            "runtime": "nodejs20",
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log",
                "*.local"
            ],
            "predeploy": [
                "npm run lint:functions",
                "npm run build:functions"
            ]
        }
    ]
}
